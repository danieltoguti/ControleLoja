@{
    @model List<ProdutoModelVW>;
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h4>Lista de Produto</h4>

    @if (Model.Count > 0)
    {
        <table class="table">

            <thead>
                <tr>
                    <th>Código</th>
                    <th>Nome</th>
                    <th>Preço de Custo</th>
                    <th>Preço Sugerido</th>
                    <th>Quantidade</th>
                    <th>Categoria</th>
                    <th>Genero</th>
                    <th>Validade</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nome</td>
                    <td>@string.Format(String.Format("{0:N2}", Convert.ToDouble(item.PrecoCusto)))</td>
                    <td>@string.Format(String.Format("{0:N2}", Convert.ToDouble(item.PrecoSugerido)))</td>                    
                    <td>@item.Qtd</td>
                    <td>@item.Categoria</td>
                    <td>@item.Genero</td>
                    <td>@item.Validade.ToString("dd/MM/yyyy")</td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-primary" role="alert">
            Sem Registros!
        </div>
    }

    <button class="btn btn-block btn-primary" type="button" onclick="window.location.href ='/produto/index'">Cadastrar Cliente</button>
</div>

<div class="form-group">


</div>


